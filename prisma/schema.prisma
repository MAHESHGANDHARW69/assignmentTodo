generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
  password   String?
  city String?
  favorites Favorites[]
  created_at DateTime  @default(now())
}
model Favorites{
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  user  User   @relation(fields: [user_id], references: [id])
  user_id       String @unique
  fav_city  String[]
}
